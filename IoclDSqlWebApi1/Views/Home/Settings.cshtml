                    document.getElementById('loadtruckcount').value = "";
                    document.getElementById('duration').value = "";
                    document.getElementById('unduration').value = "";
                    //if (data.data == 1) {
                    //    //    onchangeddetails(selecteddate, selectedevice);
                    //    getaveragevalues(selecteddate, selectedevice);
                    //}


                }).catch(err => alert(err))
        }

        function set(value,deviceid) {

            let url = weburl + "api/GetSettingsController/Setvalue/" + value + "/" + deviceid;
            axios.get(url).then
                (data => {
                    console.log(data.data);
                    
                    alert("Value updated successfully");
                    GetTargetcount(selecteddate);
                  
                    document.getElementById("c1standard").value = "";
                    document.getElementById("c2standard").value = "";
                    document.getElementById("c3standard").value = "";
                    document.getElementById("c4standard").value = "";



                    //if (data.data == 1) {
                    //    //    onchangeddetails(selecteddate, selectedevice);
                    //    getaveragevalues(selecteddate, selectedevice);
                    //}


                }).catch(err => alert(err))
        }
        async function GetTargetcount(value) {

            let url = weburl + "api/GetSettingsController/GetTargetValue/" + value;
            //let url = " http://188.42.97.98:90/api/GetCardController/GetRPHValues/2022-08-09 ";

            axios.get(url).then

                (data => {

                  
                    if (data.data.length == 0) {

                        return;
                    }

                    for (var i = 0; i < data.data.length; i++) {
                        let obj = data.data[i];
                        if (obj.device == 1) {
                            document.getElementById('c1count').innerHTML = numberWithCommas(obj.targetcount);
                        }
                        else if (obj.device == 2) {
                            document.getElementById('c2count').innerHTML = numberWithCommas(obj.targetcount);
                        }
                        else if (obj.device == 3) {
                            document.getElementById('c3count').innerHTML = numberWithCommas(obj.targetcount);
                        }
                        else if (obj.device == 4) {
                            document.getElementById('c4count').innerHTML = numberWithCommas(obj.targetcount);
                        } else if (obj.device == 5) {
                            document.getElementById('overallcount').innerHTML = numberWithCommas(obj.targetcount);
                        }


                    
                    }
                }).catch(err => alert(err));



        }

        function numberWithCommas(x) {
            return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }
        async function GetTargettruckcount() {

            let url = weburl + "api/GetSettingsController/Gettruckcount/" ;
            //let url = " http://188.42.97.98:90/api/GetCardController/GetRPHValues/2022-08-09 ";

            axios.get(url).then

                (data => {


                    if (data.data.length == 0) {

                        return;
                    }

                    for (var i = 0; i < data.data.length; i++) {
                        let obj = data.data[i];
                        if (obj.device == 2) {
                            document.getElementById('load1').innerHTML = numberWithCommas( obj.targetcount);
                        }
                        else if (obj.device == 1) {
                            document.getElementById('load2').innerHTML = numberWithCommas(obj.targetcount);
                        }
                        else if (obj.device==4) {
                            document.getElementById('undurationset').innerHTML = numberWithCommas(obj.targetcount);
                            
                        }
                        else {
                            document.getElementById('durationset').innerHTML = numberWithCommas(obj.targetcount);
                        }



                    }
                }).catch(err => alert(err));



        }

     

    </script>

