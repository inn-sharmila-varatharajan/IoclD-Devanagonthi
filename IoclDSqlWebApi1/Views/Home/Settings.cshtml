    <script type="text/javascript">
         let selecteddate,selectedevice;
           var weburl= '@System.Configuration.ConfigurationManager.AppSettings["URL"]';
        $(document).ready(function () {

            var now = new Date();

            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);

            var today = now.getFullYear() + "-" + (month) + "-" + (day);
            selecteddate = today;
            GetTargetcount(today);
            GetTargettruckcount();
       

        });

        function settruck(value, deviceid) {

            let url = weburl + "api/GetSettingsController/Settruckvalue/" + value + "/" + deviceid;
            axios.get(url).then
                (data => {
                    console.log(data.data);

                    alert("Value updated successfully");
                    GetTargettruckcount();
