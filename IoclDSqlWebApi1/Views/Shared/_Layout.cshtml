    <script>

        function handleTabletChange(e) {
            // Check if the media query is true
            if (e.matches) {
                // Then log the following message to the console
                document.getElementById("timenow").innerHTML = "Welcome " + user;

            }
            else
                document.getElementById("timenow").innerHTML = "Welcome " + user + "</br >" + current_date + " 06:00:00" + " to " + current_date + " " + current_time;
        }
        var x = window.matchMedia("(max-width: 1000px)");
        x.addListener(handleTabletChange)
        var width = (window.innerWidth > 0) ? window.innerWidth : screen.width;
     
        var date = new Date();
        var current_date = date.getUTCFullYear() + "-" + ('0' + (date.getMonth() + 1)).slice(-2) + "-" + ("0" + date.getUTCDate()).slice(-2);
        var current_time = date.getHours() + ":" + ("0" + date.getMinutes()).slice(-2) + ":" + ("0" + date.getSeconds()).slice(-2);
        var user = sessionStorage.getItem("username");
        user = user.replace("aparinnosys.com", "");
        user = user.substring(0, user.length - 1);
        handleTabletChange(x);
        $(function () {
            $('#urlddl').change(function () {
                var url = $(this).val();
                if (url != null && url != '') {
